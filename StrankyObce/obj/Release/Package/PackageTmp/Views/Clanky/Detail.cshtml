@using DataAcces

@{
    ViewBag.Title = "detailClanku";
}

@model Clanky1

@if (Request.IsAuthenticated)
{
@section adminMenu{
    <a href="#" class="list-group-item active">Detail článku</a>
    @Html.ActionLink("Upravit článek", "Upravit", "Clanky", new { id = Model.Id }, new { @class = "list-group-item" })
