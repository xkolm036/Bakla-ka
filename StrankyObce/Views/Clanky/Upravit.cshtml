@using DataAcces.Models

@model Clanky

@{
    ViewBag.Title = "Index";

}

@section main{

    <h1>Upravit článek</h1>
}
@if (Request.IsAuthenticated)
{
@section adminMenu{
    <a href="#" class="list-group-item active">Úprava článku</a>
    @Html.ActionLink("Detail článku", "Detail", "Clanky", new { ID = Model.ID }, new { @class = "list-group-item" })
    @Html.ActionLink("Seznam článků", "Seznam", "Clanky", new { }, new { @class = "list-group-item" })
}
}

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
}


@Model.Datum_Vytvoreni;



@using (Html.BeginForm("Edit", "Clanky", new { ID = Model.ID }, FormMethod.Post))
{

    <div class="form-group">
        <label>Název článku</label>
        <span id="helpBlock2" class="help-block ">
            @Html.ValidationMessageFor(x => x.Nazev, "", new { @class = "text-danger" })
        </span>
        @Html.TextBoxFor(x => x.Nazev, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Obsah </label>
        <span id="helpBlock2" class="help-block ">
            @Html.ValidationMessageFor(x => x.Text, "", new { @class = "text-danger" })
        </span>
        @Html.TextAreaFor(x => x.Text, new { @class = "form-control", id = "CKE" })
        <script type="text/javascript">CKEDITOR.replace("CKE");</script>
    </div>

    <button type="submit" class="btn btn-default btn-lg">Uložit</button>
}


